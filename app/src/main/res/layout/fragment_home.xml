    <LinearLayout
        android:id="@+id/home_search_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_search_back_button"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_back" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/home_search_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="search..."
            android:textColorHint="@color/light_blue"
            app:endIconMode="clear_text"
            app:endIconTint="@color/inactive_icon_color"
            app:hintTextColor="@color/transparent"
            app:startIconDrawable="@drawable/ic_search_active"
            app:startIconTint="@color/steps_progress_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/home_search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_background"
                android:fontFamily="@font/worksans_regular"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:scrollHorizontally="true"
                android:textColorLink="@color/primary_blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/home_map_button"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_map" />

    </LinearLayout>

