<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/worksans_medium"
        android:text="Do you want to logout for sure?"
        android:textColor="@color/primary_blue"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/yes_quit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:backgroundTint="#FCE4EC"
            android:fontFamily="@font/worksans_medium"
            android:padding="15dp"
            android:text="Yes, Quit!"
            android:textAllCaps="false"
            android:textColor="#E61000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/no_stay_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:backgroundTint="#C8E6C9"
            android:fontFamily="@font/worksans_bold"
            android:padding="15dp"
            android:text="No, stay!"
            android:textAllCaps="false"
            android:textColor="#009688"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>

